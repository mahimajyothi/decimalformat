package oops_lms;
import java.text.DecimalFormat;
public class Decimalformat {
  public static void main(String[] args){
	  Flight f=new Flight();
	  f.fly();
	  
	  generateTicketPrice();
  }
  public static void generateTicketPrice()
  {
	  double ticketprice=12000.758542;
  	DecimalFormat df=new DecimalFormat("#.00");
  	System.out.println("ticketprice:"+df.format(ticketprice));
  }
}
